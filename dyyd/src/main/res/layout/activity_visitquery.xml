<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="拜访客户" />

                <TextView
                    android:id="@+id/visitquery_customer"
                    style="@style/MyText" />
            </LinearLayout>


            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="拜访人员" />


                <TextView
                    android:id="@+id/visitquery_person"
                    style="@style/MyText" />


            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="拜访目的" />


                <TextView
                    android:id="@+id/visitquery_aim"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="拜访结果" />

                <TextView
                    android:id="@+id/visitquery_result"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout"
                android:id="@+id/ll_question_type">

                <TextView
                    style="@style/MyTitle"
                    android:text="问题类型" />

                <TextView
                    android:id="@+id/txt_question_type"
                    style="@style/MyText" />
            </LinearLayout>


            <LinearLayout style="@style/TextOutLayout"
                android:id="@+id/ll_question">

                <TextView
                    style="@style/MyTitle"
                    android:text="问题反馈" />

                <TextView
                    android:id="@+id/txt_question"
                    style="@style/MyText" />
            </LinearLayout>

            <RelativeLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="照片信息" />


                <ImageView
                    android:id="@+id/visitquery_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter" />


                <ProgressBar
                    android:id="@+id/photo_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_download"
                    style="@style/TapText"
                    android:layout_alignParentRight="true"
                    android:text="获取" />

            </RelativeLayout>


            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="到达位置" />

                <TextView
                    android:id="@+id/txt_reach_addr"
                    style="@style/MyText" />

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">


                <TextView
                    style="@style/MyTitle"
                    android:text="离开位置" />


                <TextView
                    android:id="@+id/txt_leave_addr"
                    style="@style/MyText" />

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">


                <TextView
                    style="@style/MyTitle"
                    android:text="到达时间" />

                <TextView
                    android:id="@+id/leavetime_text"
                    style="@style/MyText" />

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">


                <TextView
                    style="@style/MyTitle"
                    android:text="离开时间" />

                <TextView
                    android:id="@+id/reachtime_text"
                    style="@style/MyText" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>