<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="上报人员" />

                <TextView
                    android:id="@+id/approve_person"
                    style="@style/MyText" />

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="签退时间" />

                <TextView
                    android:id="@+id/approve_outtime"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="上个工作\n日计划" />

                <TextView
                    android:id="@+id/approve_yester"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="今日总结" />

                <TextView
                    android:id="@+id/approve_summary"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="下个工作\n日计划" />

                <TextView
                    android:id="@+id/approve_plan"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="审批意见" />

                <EditText
                    android:id="@+id/approve_advise"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="审批时间" />

                <TextView
                    android:id="@+id/approve_time"
                    style="@style/MyText" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <RelativeLayout style="@style/RelativeBottom">

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:drawableTop="@drawable/confirm_icon" />

    </RelativeLayout>

</LinearLayout>