<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="人员姓名"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="签到时间"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title1"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/context_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title2"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title1"
                android:layout_below="@+id/location_text"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:text="是否有效\n范围内"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/title0"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="签到地址"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title5"
                android:layout_below="@+id/title5"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="照片信息"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title2"
                android:layout_below="@+id/title2"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="不在有效\n范围类别"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title4"
                style="@style/detailTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title3"
                android:layout_below="@+id/class_text"
                android:layout_marginTop="10dp"
                android:text="签到异常\n说明" />

            <ImageView
                android:id="@+id/checkin_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignTop="@+id/title6"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/explain_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/title4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title4"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/title7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title6"
                android:layout_below="@+id/checkin_image"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="审批人"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title6"
                android:layout_below="@+id/title7"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="审批时间"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title"
                android:layout_below="@+id/title8"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="审批结果"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/approveman_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title7"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/class_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/context_text"
                android:layout_alignTop="@+id/title3"
                android:layout_marginRight="20dp"
                android:background="@drawable/text_bg"
                android:completionThreshold="1"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title4"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/explain_text"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="出行方式"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/journey_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/explain_text"
                android:layout_alignTop="@+id/title5"
                android:layout_marginRight="20dp"
                android:background="@drawable/text_bg"
                android:completionThreshold="1"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title0"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/person_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/approvetime_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title8"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title8"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/approveresult_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title9"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title9"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <ProgressBar
                android:id="@+id/photo_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/checkin_image"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/journey_type"
                android:layout_alignTop="@+id/checkin_image"
                android:src="@drawable/download_button" />

            <Button
                android:id="@+id/download_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageView1"
                android:layout_alignTop="@+id/imageView1"
                android:background="#00000000" />

        </RelativeLayout>
    </ScrollView>

     <RelativeLayout
         android:id="@+id/linearlayout"
         android:layout_width="match_parent"
         android:layout_height="60dp"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:background="#4db0f6" >

         <Button
             android:id="@+id/agree_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="20dp"
             android:background="#00000000"
             android:drawableTop="@drawable/agree_button" />

         <Button
             android:id="@+id/refuse_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_alignParentRight="true"
             android:layout_marginRight="24dp"
             android:background="#00000000"
             android:drawableTop="@drawable/refuse_button" />

         <Button
             android:id="@+id/query_map"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:layout_centerHorizontal="true"
             android:background="#00000000"
             android:drawableTop="@drawable/queryphoto_button" 
             android:visibility="gone"/>

     </RelativeLayout>

</LinearLayout>