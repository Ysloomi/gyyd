<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/person_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title4"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title1"
                android:layout_below="@+id/title1"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="上级姓名"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title1"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/boss_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title2"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="安排时间"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title3"
                android:layout_below="@+id/arrange_text"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="执行人员"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title4"
                android:layout_below="@+id/title4"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="完成时间"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/title5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title5"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title2"
                android:layout_below="@+id/title2"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="工作内容"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/arrange_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/title3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title3"
                android:background="@drawable/bigtext_bg"
                android:gravity="top"
                android:paddingLeft="2dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title5"
                android:layout_below="@+id/title5"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="完成结果"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/title6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title6"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/title7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title6"
                android:layout_below="@+id/title6"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="状  态"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/title7"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title7"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/title8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title7"
                android:layout_below="@+id/title7"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="评  价"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/judge_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/title8"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title8"
                android:background="@drawable/text_bg"
                android:completionThreshold="1"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/title9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/title8"
                android:layout_below="@+id/title8"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="申诉理由"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/appeal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/title9"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/title9"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="14sp" />
        </RelativeLayout>
</ScrollView>
    

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#4db0f6" >

        <Button
            android:id="@+id/arrange_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:drawableTop="@drawable/confirm_icon" />

        <Button
            android:id="@+id/judge_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#00000000"
            android:drawableTop="@drawable/judge_button" />

        <Button
            android:id="@+id/appeal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:background="#00000000"
            android:drawableTop="@drawable/appeal_button" />

        <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="#00000000"
            android:drawableTop="@drawable/confirm_icon2" />

    </RelativeLayout>

</RelativeLayout>