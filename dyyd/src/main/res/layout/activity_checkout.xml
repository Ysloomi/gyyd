<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="今日拜访" />

                <TextView
                    android:id="@+id/txt_visit"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="今日总结" />

                <EditText
                    android:id="@+id/summary_text"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="下个工作\n日计划" />

                <EditText
                    android:id="@+id/plan_text"
                    style="@style/MyText" />

                <TextView
                    android:id="@+id/txt_preserve"
                    style="@style/TapText"
                    android:text="保存" />

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/MyTitle"
                    android:text="当前位置" />

                <TextView
                    android:id="@+id/location_text"
                    style="@style/MyText"
                    android:layout_toRightOf="@+id/textView5" />

                <TextView
                    android:id="@+id/txt_refresh"
                    style="@style/TapText"
                    android:text="刷新"/>

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="是否有效范围" />

                <TextView
                    android:id="@+id/txt_inside"
                    style="@style/MyText" />

                <TextView
                    android:id="@+id/txt_map"
                    style="@style/TapText"
                    android:text="地图" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="出行方式" />

                <TextView
                    android:id="@+id/type_text"
                    style="@style/MyText" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_mileage"
                style="@style/TextOutLayout"
                android:visibility="gone">

                <TextView
                    style="@style/MyTitle"
                    android:text="里程说明" />

                <TextView
                    android:id="@+id/distance_text"
                    style="@style/MyText" />
            </LinearLayout>

