<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/TextOutLayout">

        <TextView
            style="@style/MyTitle"
            android:text="单位" />

        <TextView
            android:id="@+id/unit_text"
            style="@style/MyText" />

    </LinearLayout>

    <LinearLayout style="@style/TextOutLayout">

        <TextView
            style="@style/MyTitle"
            android:text="部门" />

        <TextView
            android:id="@+id/department_text"
            style="@style/MyText" />
    </LinearLayout>

    <LinearLayout style="@style/TextOutLayout">

        <TextView
            style="@style/MyTitle"
            android:text="姓名" />

        <TextView
            android:id="@+id/name_text"
            style="@style/MyText" />
    </LinearLayout>

    <LinearLayout style="@style/TextOutLayout">

        <TextView
            style="@style/MyTitle"
            android:text="电话" />

        <TextView
            android:id="@+id/tel_text"
            style="@style/MyText" />
    </LinearLayout>

    <LinearLayout style="@style/TextOutLayout">

        <TextView
            style="@style/MyTitle"
            android:text="SIM" />

        <TextView
            android:id="@+id/mac_text"
            style="@style/MyText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_online"
        style="@style/TextOutLayout"
        android:visibility="gone">

        <TextView
            style="@style/MyTitle"
            android:text="在线人数" />

        <TextView
            android:id="@+id/online_text"
            style="@style/MyText" />

        <TextView
            android:id="@+id/txt_detail"
            style="@style/TapText"
            android:text="详情"/>

    </LinearLayout>


    <Button
        android:id="@+id/btn_update"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@color/blue"
        android:text="在线升级"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_changepassword"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/btn_update"
        android:layout_marginTop="20dp"
        android:background="@color/blue"
        android:text="修改密码"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_advise"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/btn_changepassword"
        android:layout_marginTop="20dp"
        android:background="@color/blue"
        android:text="意见反馈"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="gone" />

</LinearLayout>