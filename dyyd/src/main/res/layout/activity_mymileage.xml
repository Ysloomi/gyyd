<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/mymileage_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout style="@style/TextOutLayout">

        <TextView
            style="@style/MyTitle"
            android:text="当月里程" />

        <TextView
            android:id="@+id/txt_month_mileage"
            style="@style/MyText" />

    </LinearLayout>

    <LinearLayout style="@style/TextOutLayout">

        <TextView
            style="@style/MyTitle"
            android:text="总里程" />

        <TextView
            android:id="@+id/total_text"
            style="@style/MyText" />

    </LinearLayout>


    <LinearLayout style="@style/TextOutLayout"
        android:visibility="gone">

        <TextView
            style="@style/MyTitle"
            android:text="已报金额" />

        <TextView
            android:id="@+id/finish_text"
            style="@style/MyText" />

    </LinearLayout>

    <LinearLayout style="@style/TextOutLayout"
        android:visibility="gone">

        <TextView
            style="@style/MyTitle"
            android:text="剩余金额" />

        <TextView
            android:id="@+id/left_text"
            style="@style/MyText" />

    </LinearLayout>

    <LinearLayout style="@style/TextOutLayout"
        android:visibility="gone">

        <TextView
            style="@style/MyTitle"
            android:text="油费总金额" />

        <TextView
            android:id="@+id/mileage_text"
            style="@style/MyText" />

    </LinearLayout>

</LinearLayout>