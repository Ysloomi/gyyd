<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="上报人员"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/query_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/query_summary"
                android:layout_alignTop="@+id/textView1"
                android:layout_marginRight="20dp"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/query_person"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="签退时间"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/query_outtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/query_summary"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginRight="20dp"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/query_outtime"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="上个工作\n日计划"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/query_yester"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/query_plan"
                android:layout_alignTop="@+id/textView3"
                android:layout_marginRight="20dp"
                android:background="@drawable/bigtext_bg"
                android:gravity="top"
                android:paddingLeft="1dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView1"
                android:layout_below="@+id/query_yester"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="今日总结"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/query_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/query_plan"
                android:layout_alignTop="@+id/textView4"
                android:layout_marginRight="20dp"
                android:background="@drawable/bigtext_bg"
                android:gravity="top"
                android:paddingLeft="1dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/query_summary"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="下个工作\n日计划"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/query_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/query_advise"
                android:layout_alignTop="@+id/textView5"
                android:layout_marginRight="20dp"
                android:background="@drawable/bigtext_bg"
                android:gravity="top"
                android:paddingLeft="1dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/query_plan"
                android:layout_marginTop="10dp"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="审批意见"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/query_advise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/textView6"
                android:background="@drawable/bigtext_bg"
                android:gravity="top"
                android:paddingLeft="1dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/query_advise"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/query_advise"
                android:background="@drawable/title_bg"
                android:gravity="center"
                android:text="审批时间"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/query_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/query_advise"
                android:layout_alignTop="@+id/textView7"
                android:layout_marginRight="20dp"
                android:background="@drawable/text_bg"
                android:gravity="center"
                android:textColor="#000000" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>