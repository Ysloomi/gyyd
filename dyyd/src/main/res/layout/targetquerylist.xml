        android:background="#00000000" /> -->

    <ListView
        android:id="@+id/targetquery_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" 
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp">
    </ListView>

    <EditText
        android:id="@+id/targetquery_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/title"
        android:background="@drawable/text_bg"
        android:completionThreshold="1" 
        android:gravity="center"
        android:hint="编号、手机、姓名"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/targetquery_text"
        android:layout_marginRight="19dp"
        android:background="@drawable/title_bg"
        android:gravity="center"
        android:text="检 索"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/targetquery_button"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/targetquery_text"
        android:layout_alignBottom="@+id/targetquery_text"
        android:layout_alignRight="@+id/title"
        android:background="#00000000" />

</RelativeLayout>