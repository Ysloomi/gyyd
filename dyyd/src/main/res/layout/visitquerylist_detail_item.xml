<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <TextView
        android:id="@+id/date"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/person"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignTop="@+id/date"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/date" />

    <TextView
        android:id="@+id/reach_time"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date"
        android:layout_below="@+id/person"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/leave_time"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reach_time"
        android:layout_alignTop="@+id/reach_time"
        android:layout_toRightOf="@+id/reach_time" />

    <TextView
        android:id="@+id/total_time"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/leave_time"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/leave_time" />

    
    <TextView
        android:id="@+id/read_time"
        style="@style/ListItemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/total_time"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/total_time" />
</RelativeLayout>