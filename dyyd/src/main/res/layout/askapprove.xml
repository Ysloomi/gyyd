<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="人员姓名" />

                <TextView
                    android:id="@+id/person_text"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="开始时期" />

                <TextView
                    android:id="@+id/start_text"
                    style="@style/MyText"/>
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">


                <TextView
                    style="@style/MyTitle"
                    android:text="结束日期" />

                <TextView
                    android:id="@+id/over_text"
                    style="@style/MyText"/>

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="天数"/>

                <TextView
                    android:id="@+id/days_text"
                    style="@style/MyText" />
            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="请假类型"/>

                <TextView
                    android:id="@+id/type_text"
                    style="@style/MyText" />

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">


                <TextView
                    style="@style/MyTitle"
                    android:text="请假事由"/>

                <TextView
                    android:id="@+id/explain_text"
                    style="@style/MyText" />

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="审批人"/>

                <TextView
                    android:id="@+id/approveman_text"
                    style="@style/MyText" />

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="审批时间" />

                <TextView
                    android:id="@+id/approvetime_text"
                    style="@style/MyText" />

            </LinearLayout>

            <LinearLayout style="@style/TextOutLayout">

                <TextView
                    style="@style/MyTitle"
                    android:text="审批结果" />

                <TextView
                    android:id="@+id/approveresult_text"
                    style="@style/MyText" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/photo_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        style="@style/RelativeBottom">

        <Button
            android:id="@+id/agree_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:background="#00000000"
            android:drawableTop="@drawable/agree_button" />

        <Button
            android:id="@+id/refuse_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:background="#00000000"
            android:drawableTop="@drawable/refuse_button" />
    </RelativeLayout>

</LinearLayout>