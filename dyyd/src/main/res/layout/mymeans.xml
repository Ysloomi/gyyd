    <Button
        android:id="@+id/update"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/mymeans_mac"
        android:layout_alignRight="@+id/mac_text"
        android:layout_below="@+id/mymeans_online"
        android:layout_marginTop="19dp"
        android:background="@color/blue"
        android:text="在线升级"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

    <Button
        android:id="@+id/changepassword"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/update"
        android:layout_alignRight="@+id/update"
        android:layout_below="@+id/update"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        android:text="修改密码"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/advise_button"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/changepassword"
        android:layout_alignRight="@+id/changepassword"
        android:layout_below="@+id/changepassword"
        android:layout_marginTop="16dp"
        android:background="@color/blue"
        android:text="意见反馈"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/online_text"
        android:layout_alignTop="@+id/mymeans_online"
        android:src="@drawable/detail_button"
        android:visibility="gone" />

    <Button
        android:id="@+id/detail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/online_text"
        android:background="#00000000"
        android:visibility="gone"/>

</RelativeLayout>